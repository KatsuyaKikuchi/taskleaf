{{define "index"}}
    {{template "layout_top" .}}
    {{template "header" .}}
    {{if .user}}
        {{range .tasks}}
            <a href="/update_task/{{.Id}}">{{.Body}}</a>
            <p>{{.CreatedAt}}</p>
        {{end}}
        <form role="form" method="post" action="/create_task">
            <input type="text" name="task" placeholder="Task">
            <button type="submit">CreateTask</button>
        </form>
    {{end}}
    {{template "footer" .}}
    {{template "layout_bottom" .}}
{{end}}